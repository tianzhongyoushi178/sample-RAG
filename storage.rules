rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Files are shared, so allow read/write to any authenticated user
    match /files/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
